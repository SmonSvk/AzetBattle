<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="270"
                android:endColor="#0b63a7"
                android:startColor="#0f84e1" />
            <stroke
                android:width="1.5dp"
                android:color="#303030" />
            <corners
                android:radius="0dp" />
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <gradient
                android:angle="270"
                android:endColor="#0e78ca"
                android:startColor="#2196F3" />
            <stroke
                android:width="3dp"
                android:color="#303030" />
            <corners
                android:radius="0dp" />
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:angle="270"
                android:endColor="#0e78ca"
                android:startColor="#3498DB" />
            <stroke
                android:width="1.5dp"
                android:color="#282828" />
            <corners
                android:radius="1dp" />
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
        </shape>
    </item>
</selector>